<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Import Category"
            id="ch.basler.importthem.commands.category">
      </category>
      <command
            name="importThem"
            categoryId="ch.basler.importthem.commands.category"
            id="ch.basler.importthem.commands.importCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="ch.basler.importthem.commands.importCommand"
            class="ch.basler.importthem.handlers.ImportHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="ch.basler.importthem.commands.importCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
