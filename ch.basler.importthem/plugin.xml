                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="ch.basler.importthem.preferences.PrefPage"
            id="ch.basler.importthem.preferences.PrefPage"
            name="ImportThem">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="ch.basler.importthem.preferences.PrefInitializer">
      </initializer>
