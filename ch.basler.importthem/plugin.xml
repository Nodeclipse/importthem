      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <command
               commandId="ch.basler.importthem.commands.importCommand"
               id="ch.basler.importthem.menus.importCommand"
               mnemonic="I">
                <visibleWhen
                  checkEnabled="false">
               <with
